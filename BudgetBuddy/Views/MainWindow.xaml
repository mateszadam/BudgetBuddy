<Window x:Class="BudgetBuddy.Page.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetBuddy.Page"
        mc:Ignorable="d"
        Title="MainWindow"        
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Closing="Window_Closing"
        Height="500" Width="900">
        <Border Background="{StaticResource MainBlackBrush}" CornerRadius="18" Padding="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Top Bar -->
                <Grid Grid.ColumnSpan="2" Grid.Row="0" Height="60" MouseLeftButtonDown="TopBar_MouseLeftButtonDown">
                    <Border Background="{StaticResource PanelBlackBrush}" CornerRadius="18"
                    />
                    <TextBlock Text="Költég" FontSize="28" FontWeight="Bold" Foreground="{StaticResource AccentGreenBrush}" Margin="20,0,0,0" VerticalAlignment="Center"/>
                    <Button Style="{StaticResource CloseButtonStyle}" Click="CloseButton_Click"/>
                </Grid>

                <!-- Navigation Panel -->
                <Border Grid.Column="0" Grid.Row="1" Background="{StaticResource PanelBlackBrush}" VerticalAlignment="Stretch" Margin="10" CornerRadius="12">
                    <StackPanel Margin="10 0 10 0">
                        <Button Style="{StaticResource NavButtonStyle}" Content="📊  Statisztika" Click="Stat_Click"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content="📁  Adatok" Click="Data_Click"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content="🏷️  Kategóriák" Click="Categories_Click"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content="💰  Bevételek" Click="Income_Click"/>
                        <Button Style="{StaticResource NavButtonStyle}" Content=" ⬆️    Feltöltés" Click="Load_Click"/>
                    </StackPanel>
                </Border>

                <!-- Main Content Area -->
                <Border Grid.Column="1" Grid.Row="1" Margin="0 10 10 10" Background="#FF181818" CornerRadius="12">
                <ContentControl x:Name="MainContentArea" Grid.Row="1"/>
            </Border>
            </Grid>
        </Border>
</Window>
